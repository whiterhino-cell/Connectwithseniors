<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic002"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/zzzzzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect with your seniors."
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_below="@+id/zzzzzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get their interview experiences and preparation strategy for on-campus and off-campus companies!"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>


</FrameLayout>